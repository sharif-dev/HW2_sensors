<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/shake_icon"
        android:layout_width="0dp"
        android:layout_height="109dp"
        android:layout_marginTop="213dp"
        android:layout_marginEnd="29dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sleep_mode_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shake" />

    <ImageView
        android:id="@+id/alarm_icon"
        android:layout_width="0dp"
        android:layout_height="109dp"
        android:layout_marginTop="58dp"
        app:layout_constraintEnd_toStartOf="@+id/shake_icon"
        app:layout_constraintStart_toEndOf="@+id/sleep_mode_icon"
        app:layout_constraintTop_toBottomOf="@+id/shake_icon"
        app:srcCompat="@drawable/alarm" />

    <ImageView
        android:id="@+id/sleep_mode_icon"
        android:layout_width="0dp"
        android:layout_height="109dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="123dp"
        android:layout_marginBottom="63dp"
        app:layout_constraintBottom_toTopOf="@+id/alarm_icon"
        app:layout_constraintEnd_toStartOf="@+id/shake_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/sleep_mode" />
</android.support.constraint.ConstraintLayout>